# Example environment variables for Spotter
# Copy this file to .env.local (or set them in your deployment environment) and fill in the values.

# External integrations
APIFY_API_TOKEN=

# NextAuth / Cognito configuration
AUTH_SECRET=
AUTH_TRUST_HOST=true
NEXTAUTH_URL=http://localhost:3000

AWS_REGION=us-east-1
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=
COGNITO_CLIENT_SECRET=
# Optional: override if you use a custom domain for the user pool
COGNITO_ISSUER_URL=

# Prisma (SQLite for local development)
DATABASE_URL="file:./prisma/dev.db"

# AWS DynamoDB Tables
DYNAMODB_USERS_TABLE=spotter-users
DYNAMODB_WORKOUTS_TABLE=spotter-workouts
DYNAMODB_BODY_METRICS_TABLE=spotter-body-metrics

# AWS S3 for Workout Images
S3_WORKOUT_IMAGES_BUCKET=spotter-workout-images
# Optional: CloudFront domain for CDN distribution
CLOUDFRONT_DOMAIN=

# AWS Credentials (optional - uses AWS CLI credentials if not provided)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=

# AWS Bedrock (AI Features - Phase 6)
AWS_BEDROCK_REGION=us-east-1
AWS_BEDROCK_MODEL=claude-sonnet-4-5

# Stripe (Subscription & Payments)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
# Stripe Price IDs for each tier (create these in Stripe Dashboard)
STRIPE_PRICE_STARTER=price_...
STRIPE_PRICE_PRO=price_...
STRIPE_PRICE_ELITE=price_...

# Rate Limiting (Upstash Redis)
# Sign up at https://upstash.com/ and create a Redis database
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_token_here

# Logging & Monitoring
LOG_LEVEL=info  # debug | info | warn | error
NODE_ENV=development  # development | production