# Example environment variables for Spotter Free
# Copy this file to .env.local and fill in the values.
APIFY_API_TOKEN=

# NextAuth
# Generate a strong secret: `openssl rand -base64 32`
AUTH_SECRET=
# Trust host is helpful for dev when behind proxies
AUTH_TRUST_HOST=true

# Prisma (SQLite)
# This stores the dev DB under the prisma folder
DATABASE_URL="file:./prisma/dev.db"

# Dev-only single-user credentials (Credentials provider)
# Used until full DB-backed auth is enabled
APP_ALLOWED_EMAIL=
APP_ALLOWED_PASSWORD=
